<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_criminal_root" name="Criminal Records" sequence="10"/>

    <!-- Person -->
    <record id="action_person" model="ir.actions.act_window">
        <field name="name">Persons</field>
        <field name="res_model">criminal.person</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_person" name="Persons" parent="menu_criminal_root" action="action_person"/>

    <!-- Criminal Records -->
    <record id="action_criminal_record" model="ir.actions.act_window">
        <field name="name">Criminal Records</field>
        <field name="res_model">criminal.record</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_criminal_record" name="Records" parent="menu_criminal_root" action="action_criminal_record"/>

    <!-- Convictions -->
    <record id="action_conviction" model="ir.actions.act_window">
        <field name="name">Convictions</field>
        <field name="res_model">criminal.conviction</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_conviction" name="Convictions" parent="menu_criminal_root" action="action_conviction"/>

    <!-- Relationships -->
    <record id="action_relationship" model="ir.actions.act_window">
        <field name="name">Relationships</field>
        <field name="res_model">criminal.relationship</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_relationship" name="Relationships" parent="menu_criminal_root" action="action_relationship"/>

    <!-- Addresses -->
    <record id="action_address" model="ir.actions.act_window">
        <field name="name">Addresses</field>
        <field name="res_model">criminal.address</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_address" name="Addresses" parent="menu_criminal_root" action="action_address"/>

    <!-- Fingerprints -->
    <record id="action_fingerprint" model="ir.actions.act_window">
        <field name="name">Fingerprints</field>
        <field name="res_model">criminal.fingerprint</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_fingerprint" name="Fingerprints" parent="menu_criminal_root" action="action_fingerprint"/>
</odoo>
