<odoo>
    <record id="view_address_tree" model="ir.ui.view">
        <field name="name">criminal.address.tree</field>
        <field name="model">criminal.address</field>
        <field name="arch" type="xml">
            <list>
                <field name="person_id"/>
                <field name="street"/>
                <field name="city"/>
                <field name="province"/>
                <field name="country"/>
            </list>
        </field>
    </record>
    <record id="view_address_form" model="ir.ui.view">
        <field name="name">criminal.address.form</field>
        <field name="model">criminal.address</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="person_id"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="province"/>
                        <field name="country"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
